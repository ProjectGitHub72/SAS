<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginRight="6dp"
    android:layout_marginLeft="4dp"
    tools:context=".DashboardFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/dashWelcomeView1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="italic"
            android:textSize="20dp"
            android:text="Welcome Back, "/>

        <TextView
            android:id="@+id/dashWelcomeView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="italic"
            android:textSize="20dp"
            android:text="User"/>

        </LinearLayout>





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


            <TextView
                android:id="@+id/profcheck1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Checkout Your Profile : "
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20dp" />

                <ImageButton
                    android:id="@+id/profileButton"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@id/profcheck1"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_person_black_24dp"
                    android:background="@color/colorPrimary"/>


        </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    >


                    <TextView
                        android:id="@+id/newscheck1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Check For Notices : "
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="20dp" />

                        <ImageButton
                            android:id="@+id/noticeButton"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_below="@id/newscheck1"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_news_black_24dp"
                            android:background="@color/colorPrimary"/>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    >


                    <TextView
                        android:id="@+id/perfcheck1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Check Your Performance : "
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="20dp" />

                        <ImageButton
                            android:id="@+id/performanceButton"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_below="@id/perfcheck1"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_performance_black_24dp"
                            android:background="@color/colorPrimary"/>


                </RelativeLayout>



        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Try Navigation Bar to look around."
            android:textSize="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>


</RelativeLayout>
